{
  "manifest_version": 3,
  "name": "网页内容总结助手",
  "version": "1.0.0",
  "description": "使用 AI 总结、翻译和高亮网页内容",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "sidebar_action": {
    "default_panel": "sidebar.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["utils/contentExtractor.js", "content.js"],
      "css": ["styles/content.css"]
    }
  ],
  "commands": {
    "open-side-panel": {
      "suggested_key": "Alt+S",
      "description": "打开侧边栏"
    }
  }
}
